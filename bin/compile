#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
OPT_DIR=$(cd "$BIN_DIR/../opt"; pwd)

LUA=lua

cd $BUILD_DIR

mkdir -p bin
echo "-----> Copying lua to bin"
cp "$OPT_DIR/lua" "bin/"

echo "-----> Installing packages"

SITE_CONFIG="$OPT_DIR/luarocks/luarocks/site_config.lua"

if [ "$ENV" != "local" ]; then
	export PATH=$OPT_DIR:$PATH
	echo "LUA_INCDIR=[[$OPT_DIR/../include]]" >> $SITE_CONFIG
	echo "LUA_LIBDIR=[[$OPT_DIR/../lib]]" >> $SITE_CONFIG
fi

PACKAGE_MOD="packages/init.lua"
mkdir -p $(dirname $PACKAGE_MOD)

echo "package.cpath = [[packages/lib/lua/5.1/?.so;]] .. package.cpath" >> $PACKAGE_MOD
echo "package.path = [[packages/share/lua/5.1/?.lua;packages/share/lua/5.1/?/init.lua;]] .. package.path" >> $PACKAGE_MOD

$LUA "$OPT_DIR/prepare.lua" "package.lua" $OPT_DIR 2>&1 | indent

